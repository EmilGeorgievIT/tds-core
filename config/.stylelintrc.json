{
  "extends": ["stylelint-config-standard", "stylelint-config-css-modules"],
  "plugins": ["stylelint-scss"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["mixin", "include", "each"]
      }
    ],
    "declaration-empty-line-before": null,
    "indentation": null,
    "declaration-colon-newline-after": null
  }
}
